<% layout("/layouts/boilerplate")%>

<div class="row">
  <div
    class="alert alert-danger d-flex align-items-center col-6 offset-3 mt-3"
    role="alert"
  >
    <svg
      class="bi flex-shrink-0 me-2"
      width="24"
      height="24"
      role="img"
      aria-label="Danger:"
    >
      <use xlink:href="#exclamation-triangle-fill" />
    </svg>
    <div>
      <h4><%= message %></h4>
    </div>
  </div>
</div>
